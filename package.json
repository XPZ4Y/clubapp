{
  "name": "clubspot-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Centralized repository for ClubSpot frontend and backend services.",
  "workspaces": [
    "project",
    "server"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=project",
    "start": "npm run start --workspace=server",
    "build": "npm run build --workspace=project",
    "preview": "npm run preview --workspace=project",
    "build:apk": "npm run build:apk --workspace=project",
    "build:bundle": "npm run build:bundle --workspace=project",
    "test:frontend": "npm run test --workspace=project",
    "test:backend": "npm run test --workspace=server",
    "test": "npm run test:frontend && npm run test:backend"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^29.7.0",
    "supertest": "^6.3.4"
  }
}
